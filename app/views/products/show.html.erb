
<div class="row">
  <div class="site-wrapper mt-20">
    <div class="col-md-12 col-sm-12 col-xd-12">
      <h4>商品信息</h4>
      <ul class="list-inline">
        <li><a href="/"> 首页 </a>/</li>
        <li><a href="/products"> 商品 </a>/</li>
        <li><a href="#"> 商品信息 </a></li>
      </ul>
    </div>
  </div>
</div>

<div class="row">
  <div class="site-wrapper mt-20">
    <div class="col-md-4">
      <% if @product.img_url.present? %>
        <%= image_tag(@product.img_url, size: "360x360", class: "main-image wow zoomIn", data: {wow_delay: "1s"} , alt: @product.name) %>
      <% else %>
        <%= image_tag("http://placehold.it/320x320&text=No Pic", class: "", alt: "None") %>
      <% end %>

      <% if @product.img_url.present? %>
        <%= image_tag(@product.img1_url, size: "70x70", class: "list-image", alt: @product.name) %>
      <% else %>
        <%= image_tag("http://placehold.it/70x70&text=No Pic", class: "", alt: "None") %>
      <% end %>

      <% if @product.img_url.present? %>
        <%= image_tag(@product.img2_url, size: "70x70", class: "list-image", alt: @product.name) %>
      <% else %>
        <%= image_tag("http://placehold.it/70x70&text=No Pic", class: "", alt: "None") %>
      <% end %>

      <% if @product.img_url.present? %>
        <%= image_tag(@product.img3_url, size: "70x70", class: "list-image", alt: @product.name) %>
      <% else %>
        <%= image_tag("http://placehold.it/70x70&text=No Pic", class: "list-image", alt: "None") %>
      <% end %>

      <% if @product.img_url.present? %>
        <%= image_tag(@product.img4_url, size: "70x70", class: "list-image", alt: @product.name) %>
      <% else %>
        <%= image_tag("http://placehold.it/70x70&text=No Pic", class: "", alt: "None") %>
      <% end %>

      <% if @product.img_url.present? %>
        <%= image_tag(@product.img5_url, size: "70x70", class: "list-image", alt: @product.name) %>
      <% else %>
        <%= image_tag("http://placehold.it/70x70&text=No Pic", class: "", alt: "None") %>
      <% end %>
    </div>
    <div class="col-md-6">
      <h4> <%= @product.name %> </h4>
      <br>
      <h5><%= @product.content %></h5>
      <br>
      <div style="background-color:#f5f5f5;padding-left:10px;">
        <br>
        <h3 >￥<%= @product.price %><% @product.price_unit %></h3>
        <br>
      </div>
      <br>
      <h5>库存数量：<%= @product.quantity %></h5>
      <br>
      <h5>剩余时间：<span id="getting-started"></span></h5>
      <br><br><br><br><br>
      <div style="text-align:center;">
        <% if @product.quantity.present? && @product.quantity > 0 %>
          <%= link_to("加入购物车", add_to_cart_product_path(@product), method: :post, class: "btn btn-danger") %>
        <% else %>
          <a href="#" class="btn btn-danger active" role="button" disabled="disabled">库存缺货</a>
        <% end %>
      </div>
    </div>
    <div class="col-md-2">
    </div>
  </div>
</div>

<div class="row">
  <div class="site-wrapper mt-20">
    <div class="col-md-12">
      <ul class="nav nav-tabs">
        <li class="active"><a href="#menu1" data-toggle="tab">商品详情</a></li>
        <li><a href="#menu2" data-toggle="tab">用户评价</a></li>
      </ul>
      <div class="tab-content pt-10">
        <div id="menu1" class="tab-pane fade in active">
          <P>绿色，天然，有机，健康！</P>
          <p><%= simple_format(@product.description) %></p>
        </div>
        <div id="menu2" class="tab-pane fade">
          <h3>Menu 2</h3>
          <p>Some content in menu 2.</p>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $("#getting-started")
  .countdown("<%= Time.zone.now + 2.days %>", function(event) {
    $(this).text(
      event.strftime('%D days %H:%M:%S')
    );
  });
</script>

